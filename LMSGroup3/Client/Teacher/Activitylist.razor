@page "/activities"
@inject HttpClient HttpClient
@inherits ComponentBase

<h3>Activities</h3>

@if (activities == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Course Name</th>
                <th>Start Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in activities)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.CourseName</td>
                    <td>@course.StartDate.ToShortDateString()</td>
                </tr>
               @*  <tr>
                    <a class="nav-link btn btn-link" href="activity/activity">Activity</a>
                </tr> *@
            }
        </tbody>
    </table>
}


