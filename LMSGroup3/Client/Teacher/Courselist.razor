@page "/courses"
@inject HttpClient HttpClient
@inherits ComponentBase

<h3>Courses</h3>

@if (courses == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Start Date</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var course in courses)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.StartDate.ToShortDateString()</td>
                   


                </tr>
                <tr>
                    <authorizeview>
                    <authorized>
                            <a class="nav-link btn btn-link float-right" href="modules?moduleId=@course.Id">Modules</a>

                               </authorized>
                    </authorizeview>
                </tr>
            }
        </tbody>
    </table>
}


