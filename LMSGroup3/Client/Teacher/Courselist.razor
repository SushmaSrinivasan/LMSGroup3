@page "/courses"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject HttpClient HttpClient
@inherits ComponentBase

<AuthorizeView Roles="Teacher">
    <Authorized>
        <div class="container mt-4">
            <h3>Courses</h3>

            @if (courses == null)
            {
                <p>Loading...</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Course Name</th>
                                <th scope="col">Course Description</th>
                                <th scope="col">Start Date</th>
                                @* <th scope="col">End Date</th> *@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in courses)
                            {
                                <tr>
                                    <td>@course.CourseName</td>
                                    <td>@course.CourseDescription</td>
                                    <td>@course.StartDate.ToShortDateString()</td>
                                    @* <td>@course.EndDate.ToShortDateString()</td> *@
                                </tr>
                                <tr>
                                    <authorizeview>
                                        <authorized>
                                            <td colspan="2" class="text-right">
                                                <button type="button" class="btn btn-primary" @onclick="() => LoadModules(course.Id)">Modules</button>
                                                @*  <button type="button" class="btn btn-primary" @onclick="() => LoadStudents(student.Id)">Students</button> *@
                                            </td>
                                        </authorized>
                                    </authorizeview>
                                </tr>
                                @if (course.Id == selectedCourseId)
                                {
                                    <tr>
                                        <td colspan="2">
                                            <h5 class="mt-3">Modules for @course.CourseName</h5>

                                    <tr>
                                        <th>Module Name</th>
                                        <th>Module Description</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Action</th>
                                    </tr>

                                            @if (modules != null)
                                            {
                                                @foreach (var module in modules)
                                                {
                                            <tr>
                                                <td>@module.ModuleName</td>
                                                <td>@module.ModuleDescription</td>
                                                <td>@module.StartDate.ToShortDateString()</td>
                                                <td>@module.EndDate.ToShortDateString()</td>
                                                <td>
                                                    <button type="button" class="btn btn-primary" @onclick="() => LoadActivities(module.Id)">Activities</button>
                                                </td>
                                            </tr>
                                                    @if (moduleWithActivities != null && moduleWithActivities.Id == module.Id)
                                                    {
                                                <tr>
                                                    <td colspan="5">
                                                        <h6 class="mt-3">Activities for @moduleWithActivities.ModuleName</h6>

                                                <tr>
                                                    <th>Activity Description</th>
                                                    <th>Start Date</th>
                                                    <th>End Date</th>
                                                    <th>Activity Type</th>
                                                </tr>

                                                                @if (activities != null)
                                                                {
                                                                    @foreach (var activity in activities)
                                                                    {
                                                        <tr>
                                                            <td>@activity.ActivityDescription</td>
                                                            <td>@activity.StartDate.ToShortDateString()</td>
                                                            <td>@activity.EndDate.ToShortDateString()</td>
                                                            <td>@activity.ActivityTypeId</td>
                                                        </tr>
                                                                    }
                                                                }
                                                                else
                                                                {
                                                    <tr>
                                                        <td colspan="4">
                                                            <p>Loading activities...</p>
                                                        </td>
                                                    </tr>
                                                                }
                                                </td>
                                                </tr>
                                                    }
                                                }
                                            }
                                            else
                                            {
                                        <tr>
                                            <td colspan="5">
                                                <p>Loading modules...</p>
                                            </td>
                                        </tr>
                                            }
                                    </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </Authorized>
</AuthorizeView>
