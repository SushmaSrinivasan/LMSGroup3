@page "/courses"
@inject HttpClient HttpClient
@inherits ComponentBase

<h3>Courses</h3>

@if (courses == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Start Date</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var course in courses)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.StartDate.ToShortDateString()</td>
                </tr>
                <tr>
                    <authorizeview>
                        <authorized>
                            <a style="cursor:pointer;" class="nav-link btn btn-link float-right" @onclick:preventDefault="true" @onclick="() => LoadModules(course.Id)">Modules</a>
                        </authorized>
                    </authorizeview>
                </tr>
                @if (course.Id == selectedCourseId)
                {
                    <tr>
                        <td colspan="2">
                            <h5>Modules for @course.CourseName</h5>
                            @if (modules != null)
                            {
                                <ul>
                                    @foreach (var module in modules)
                                    {
                                        <li>@module.ModuleName</li>
                                        <a style="cursor:pointer;" class="nav-link btn btn-link float-right" @onclick:preventDefault="true" @onclick="() => LoadActivities(module.Id)">Activities</a>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>Loading modules...</p>
                            }
                        </td>
                    </tr>
                    @if (moduleWithActivities != null && moduleWithActivities.Id == selectedModuleId)
                    {
                        <tr>
                            <td colspan="2">
                                <h5>Activities for @moduleWithActivities.ModuleName</h5>
                                @if (activities != null)
                                {
                                    <ul>
                                        @foreach (var activity in activities)
                                        {
                                            <li>@activity.ActivityDescription</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p>Loading activities...</p>
                                }
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
}